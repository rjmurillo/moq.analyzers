{
    "inputs": [
        {
            "type":"promptString",
            "id": "GITHUB_PERSONAL_ACCESS_TOKEN",
            "description": "GitHub personal access token",
            "password": true
        },
        {
            "type":"promptString",
            "id": "CODACY_ACCOUNT_TOKEN",
            "description": "Codacy account token",
            "password": true
        },
        {
            "type":"promptString",
            "id": "SUPERMEMORY_URL",
            "description": "Supermemory URL",
            "password": true
        }
    ],
    "servers": {
        "mcp-supermemory-ai": {
            "command": "npx",
            "args": [
                "-y",
                "supergateway",
                "--sse",
                "${input:SUPERMEMORY_URL}"
            ]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:GITHUB_PERSONAL_ACCESS_TOKEN}"
            }
        },
        "codacy": {
            "command": "npx",
            "args": [
                "-y",
                "@codacy/codacy-mcp"
            ],
            "env": {
                "CODACY_ACCOUNT_TOKEN": "${input:CODACY_ACCOUNT_TOKEN}"
            }
        },
        "serena": {
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena@v0.1.4",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant",
                "--project",
                "${workspaceFolder}"
            ]
        }
    }
}
